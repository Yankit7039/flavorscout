# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your actual credentials
# 
# IMPORTANT: Never commit secrets.toml to Git (it's already in .gitignore)

# Reddit API Credentials (Optional - requires commercial approval)
# Get these from: https://www.reddit.com/prefs/apps
# See REDDIT_SETUP.md for detailed instructions
# WARNING: Commercial use requires explicit approval from Reddit
[reddit]
client_id = "your_reddit_client_id_here"
client_secret = "your_reddit_client_secret_here"
user_agent = "flavor-scout-app"

# RapidAPI Key (Recommended - No approval needed!)
# Get this from: https://rapidapi.com
# 1. Sign up at RapidAPI
# 2. Subscribe to "Amazon Product Reviews Keywords" API (free tier available)
# 3. Copy your API key from the dashboard
# See ALTERNATIVE_DATA_SOURCES.md for details
[rapidapi]
api_key = "your_rapidapi_key_here"

# AI/LLM Provider Configuration
# Choose ONE of the following providers (Anthropic is the default)

# Option 1: Anthropic Claude (Default)
[anthropic]
api_key = "your_anthropic_api_key_here"
model = "claude-3-5-sonnet-20241022"

# Option 2: OpenAI GPT (Alternative)
# Uncomment and fill these if you prefer OpenAI instead
# [openai]
# api_key = "your_openai_api_key_here"
# model = "gpt-4"

